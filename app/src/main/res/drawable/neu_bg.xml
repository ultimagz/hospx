<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight"
    android:radius="6dp">
    <item>
        <layer-list>
            <item
                android:bottom="6dp"
                android:right="6dp">
                <shape>
                    <gradient
                        android:angle="-90"
                        android:endColor="#00C1B6"
                        android:startColor="#20D6CB"
                        android:type="linear"
                        android:useLevel="false" />
                    <corners android:radius="4dp" />
                </shape>
            </item>

            <item
                android:left="6dp"
                android:top="6dp">
                <shape>
                    <gradient
                        android:angle="90"
                        android:centerColor="#40000000"
                        android:endColor="#20000000"
                        android:startColor="#60000000" />
                    <corners android:radius="4dp" />
                </shape>
            </item>

            <item
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp">
                <shape>
                    <solid android:color="#00C1B6" />
                    <corners android:radius="6dp" />
                </shape>
            </item>

        </layer-list>
    </item>
</ripple>