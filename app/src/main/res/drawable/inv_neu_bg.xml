<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <padding
                android:left="3dp"
                android:top="3dp" />
            <gradient
                android:angle="-90"
                android:endColor="#20000000"
                android:startColor="#40000000" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="3dp"
                android:right="3dp" />
            <gradient
                android:angle="90"
                android:endColor="#00C1B6"
                android:startColor="#20D6CB" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#00C1B6" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <corners android:radius="6dp" />
        </shape>
    </item>

</layer-list>